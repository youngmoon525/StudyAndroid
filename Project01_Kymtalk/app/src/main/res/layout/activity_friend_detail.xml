<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".friend.FriendDetailActivity">
    <FrameLayout
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgv_back"
            android:alpha="0.4"
            android:scaleType="centerCrop"
            android:src="@drawable/friend_back_img1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginLeft="20dp"
            android:id="@+id/imgv_close"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_close_white"
            android:layout_width="30dp"
            android:layout_height="30dp"/>


        <ImageView
            android:id="@+id/imgv_top_ic1"
            android:layout_alignParentRight="true"
            android:src="@drawable/img_top"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>

        <androidx.cardview.widget.CardView
            android:layout_centerHorizontal="true"
            android:layout_above="@id/ln_name"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="20dp"
            >
            <ImageView
                android:id="@+id/imgv_profile"
                android:src="@drawable/friend_profile_img5"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/ln_name"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/view_line"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name"
                android:textColor="#fff"
                android:text="이름표기"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@drawable/ic_baseline_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:id="@+id/view_line"
            android:alpha="0.5"
            android:layout_above="@id/ln_btm"
            style="@style/gray_view_line1dp"/>

        <LinearLayout
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:id="@+id/ln_btm"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="20dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_chat_bubble"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:textColor="#C6C6C6"
                    android:text="1:1채팅"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            </LinearLayout>
            <LinearLayout
                android:padding="20dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:textColor="#C6C6C6"
                    android:text="통화하기"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            </LinearLayout>
            <LinearLayout
                android:padding="20dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:textColor="#C6C6C6"
                    android:text="페이스톡"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>


</FrameLayout>