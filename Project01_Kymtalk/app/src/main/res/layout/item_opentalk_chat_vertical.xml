<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:id="@+id/ln_friend"
    android:layout_margin="10dp"
    >
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:cardCornerRadius="15dp"
        >

    <FrameLayout
        android:background="@drawable/item_opentalk_gradient_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:alpha="0.6"
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:cardCornerRadius="15dp"
        >

        <ImageView

            android:id="@+id/imgv_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/friend_profile_img5" />
    </androidx.cardview.widget.CardView>


    </FrameLayout>
    </androidx.cardview.widget.CardView>
    </FrameLayout>
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="200dp">

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_above="@id/tv_cnt"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="삼국지 러쉬\nOrigins 존모방"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_cnt"
            android:layout_margin="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:textSize="12dp"
            android:textColor="#fff"
            android:text="457명"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textSize="12dp"
            android:textColor="#fff"
            android:text="방금 대화"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

</FrameLayout>


